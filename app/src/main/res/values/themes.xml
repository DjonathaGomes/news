<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prime</item>
        <item name="colorPrimaryVariant">@color/prime_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/prime_light</item>
        <item name="colorSecondaryVariant">@color/prime</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- AlphaShadow. -->
        <item name="android:ambientShadowAlpha" tools:targetApi="lollipop">0.09</item>
        <item name="android:spotShadowAlpha" tools:targetApi="lollipop">0.09</item>
        <!-- Customize your theme here. -->
    </style>
</resources>